<%= render 'layouts/content_title', title: "Profile: #{@user.username}" %>

<div class='well'>
  <p><strong>Username: <%= @user.username %></strong></p>
  <p><strong>Timezone: <%= display_zone(Time.now) %> </strong></p>
</div>

<ul class='nav nav-tabs'>
  <li class='active'><a data-toggle='tab' href="#posts">Posts (<%=@user.posts.size %>) </a></li>
  <li><a data-toggle='tab' href="#comments">Comments (<%= @user.comments.size %>)</a></li>
</ul>

<div class='tab-content'>
  <div id='posts' class='tab-pane fade in active'>
    <% @user.posts.each do |post| %>
    <%= render 'posts/show_post', post: post %>
    <% end %>
  </div>
  <div id='comments' class='tab-pane fade'>
    <%= render @user.comments.order(updated_at: :desc), display_post_title: true %>
  </div>
</div>
