<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>

  <% if !logged_in? %>
  <li>
    <%= link_to "Register", register_path %>
  </li>
  <li>
    <%= link_to "Log in", login_path %>
  </li>
  <% end %>

</ul>

<% if logged_in? %>
<div class="btn-group nav_item">
  <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
  Categories <span class='caret'></span>
  <% end %>
  <ul class='dropdown-menu'>
    <% Category.all.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
    <% end %>
    <li class="divider"></li>
    <li>
      <%= link_to(new_category_path) do %>
      <i class="icon-plus"></i>
      New Category
      <% end %>
    </li>
  </ul>
</div>

<div class='nav_item'>
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      <%= current_user.username %>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
      <li><%= link_to "<i class='icon-pencil'></i> edit profile".html_safe, edit_user_path(current_user) %></li>
      <li><%= link_to "<i class='icon-user'></i> view profile".html_safe, user_path(current_user) %></li>
      <li><%= link_to "<i class='icon-circle-arrow-left'></i> logout".html_safe, logout_path %></li>
    </ul>
  </div>
</div>

<div class="nav_item">
  <%= link_to 'New Post', new_post_path, class: "btn btn-success small" %>
</div>
<% end %>
